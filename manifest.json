{
  "manifest_version": 3,
  "name": "The Third Eye",
  "description": "The Third Eye",
  "version": "0.0.1",
  "permissions": ["tabs", "storage", "tts", "scripting", "downloads"],
  "icons": {
    "16": "./images/logo_16.png",
    "32": "./images/logo_32.png",
    "48": "./images/logo_48.png",
    "128": "./images/logo_128.png",
    "512": "./images/logo_512.png",
    "1024": "./images/logo_1024.png"
  },
  "action": {
    "default_title": "The Third Eye",
    "default_popup": "./src/client/popup/index.html",
    "default_icon": {
      "16": "./images/logo_16.png",
      "32": "./images/logo_32.png",
      "48": "./images/logo_48.png",
      "128": "./images/logo_128.png",
      "512": "./images/logo_512.png",
      "1024": "./images/logo_1024.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "./src/client/newtab/index.html"
  },
  "content_scripts": [
    {
      "js": ["./dist/core/cs/main.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "./dist/core/sw/main.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
