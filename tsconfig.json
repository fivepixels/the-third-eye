{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES5",
    "baseUrl": "./",
    "allowJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@cs/*": ["./src/cs/*"],
      "@sw/*": ["./src/sw/*"],
      "@shapes/*": ["./src/shapes/*"]
    }
  }
}
