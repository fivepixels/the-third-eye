{
  "include": ["./src/**/*.ts", "src/core/sw/messageManager."],
  "compilerOptions": {
    "lib": ["DOM", "ES2015", "DOM.Iterable", "ScriptHost"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES5",
    "baseUrl": "./",
    "allowJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@cs/*": ["./src/cs/*"],
      "@sw/*": ["./src/sw/*"],
      "@shapes/*": ["./src/shapes/*"]
    },
    "noImplicitAny": false
  }
}
