{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "node_modules/@types"],
    "paths": {
      "@src/*": ["./src/*"],
      "@types/*": ["./types/*"],
      "@client/*": ["./src/client/*"],
      "@core/*": ["./src/core/*"]
    },
    "include": ["./src/**/*.ts"]
  }
}
