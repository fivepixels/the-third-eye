{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2015"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@sw/*": ["./src/core/sw/*"],
      "@cs/*": ["./src/core/cs/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
