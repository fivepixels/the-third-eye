{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": ".",
    "allowJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["message"],
    "paths": {
      "@src/*": ["./src/*"],
      "@cs/*": ["./src/cs/*"],
      "@sw/*": ["./src/sw/*"],
      "@shapes/*": ["./types/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
