{
  "include": ["src", "types"],
  "compilerOptions": {
    "lib": ["ES6", "DOM", "ES2016", "DOM.Iterable", "ScriptHost"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": "./",
    "allowJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@cs/*": ["./src/content-scripts/*"],
      "@sw/*": ["./src/service-workers/*"],
      "@type/*": ["./types/*"]
    },
    "noImplicitAny": false
  }
}
