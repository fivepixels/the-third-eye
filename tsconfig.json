{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "baseUrl": ".",
    "allowJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@cs/*": ["./src/cs/*"],
      "@sw/*": ["./src/sw/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
