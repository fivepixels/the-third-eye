{
  "include": ["./src/**/*.ts", "src/core/sw/messageManager."],
  "compilerOptions": {
    "lib": ["ES6", "DOM", "ES2016", "DOM.Iterable", "ScriptHost"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": "./",
    "allowJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@cs/*": ["./src/core/cs/*"],
      "@sw/*": ["./src/core/sw/*"],
      "@shapes/*": ["./src/shapes/*"]
    },
    "noImplicitAny": false
  }
}
